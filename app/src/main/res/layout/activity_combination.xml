<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/tab_selected_strip1">

    <include layout="@layout/general_toolbar"></include>
    <LinearLayout
        android:id="@+id/llNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#d9e5efef"
        android:layout_margin="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subject_combo"
            android:textSize="@dimen/text_size_med"
            android:padding="10dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

    <!--
    Wanna see this guy roll in the center of the screen
    -->
    <com.dd.CircularProgressButton
        android:id="@+id/pdialog"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/transparent_button"
        app:cpb_textComplete="Success"
        app:cpb_textError="Error"
        app:cpb_textIdle="Register"
        app:cpb_selectorIdle="@drawable/button_color_selector"
        app:cpb_colorIndicator="@color/theme_primary"
        android:textColor="@color/theme_primary"
        android:textSize="21sp"
        android:visibility="gone"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="6dp"
        card_view:elevation="4dp">

    <LinearLayout
        android:id="@+id/chkLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">



        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English Language"
            android:layout_centerInParent="true"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/element_spacing_normal"
            android:paddingBottom="5dp"
            android:enabled="false"
            android:editable="false"
            android:checked="true"
            android:id="@+id/english" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/element_spacing_normal"
            android:textColor="#666666"
            android:paddingBottom="5dp"
            android:onClick="selectItems"
            android:text="Accounting"
            android:id="@+id/accounting" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/element_spacing_normal"
            android:textColor="#666666"
            android:paddingBottom="5dp"
            android:onClick="selectItems"
            android:text="Agriculture"
            android:id="@+id/agric" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/element_spacing_normal"
            android:textColor="#666666"
            android:paddingBottom="5dp"
            android:onClick="selectItems"
            android:text="Biology"
            android:id="@+id/biology" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chemistry"
            android:layout_centerInParent="true"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/element_spacing_normal"
            android:textColor="#666666"
            android:paddingBottom="5dp"
            android:onClick="selectItems"
            android:id="@+id/chemistry" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/element_spacing_normal"
            android:textColor="#666666"
            android:paddingBottom="5dp"
            android:onClick="selectItems"
            android:text="Christian Religious Knowledge"
            android:id="@+id/crk" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/element_spacing_normal"
            android:textColor="#666666"
            android:paddingBottom="5dp"
            android:onClick="selectItems"
            android:text="Commerce"
            android:id="@+id/comm" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/element_spacing_normal"
            android:textColor="#666666"
            android:paddingBottom="5dp"
            android:onClick="selectItems"
            android:text="Economics"
            android:id="@+id/economics" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/element_spacing_normal"
            android:textColor="#666666"
            android:paddingBottom="5dp"
            android:onClick="selectItems"
            android:text="Geography"
            android:id="@+id/geography" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/element_spacing_normal"
            android:textColor="#666666"
            android:paddingBottom="5dp"
            android:onClick="selectItems"
            android:text="Government"
            android:id="@+id/govt" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/element_spacing_normal"
            android:textColor="#666666"
            android:paddingBottom="5dp"
            android:onClick="selectItems"
            android:text="Literature-In-English"
            android:id="@+id/literature" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/element_spacing_normal"
            android:textColor="#666666"
            android:paddingBottom="5dp"
            android:onClick="selectItems"
            android:text="Mathematics"
            android:id="@+id/maths" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:button="@drawable/custom_checkbox"
            android:padding="@dimen/element_spacing_normal"
            android:textColor="#666666"
            android:paddingBottom="5dp"
            android:onClick="selectItems"
            android:text="Physics"
            android:id="@+id/physics" />



